<h1>Listing wants</h1>

<div id="content">

<div id="status"></div>

<ul id="desire">
  <li>
    <% remote_form_for @want,
      :update => 'status',
      :complete => %((new DesireList($j('ul#desire'))).insert($j('input#want_name').val()); $j('ul#desire > li:first').hide();) do |f| %>
      <%= f.text_field :name %>
    <% end %>
  </li>

<% @wants.each do |want| %>
  <li class="<%= generate_item_classes want %>">
    <%= h(want.name) %>
    <div class="price"><%=h want.price %>
    <%= link_to image_tag("delete.png"), want, :confirm => 'Are you sure?', :method => :delete %>
    </div>
  </li>
<% end %>
</ul>

</div>

<br />

<div id="navigation" class="column">
<%= link_to 'add...', '#', :id => "create-button" %>
</div>

<div id="total-items" class="column">Items: <%= @wants.size %></div>
<div id="total-expenses" class="column">Expenses: <%= @total_expenses %></div>
<div id="tobuy-items" class="column">Items To Buy: <%= @tobuy_items %></div>
<div id="total-budgets" class="column">Budgets: <%= @total_budgets %></div>
<span class="clear"></span>
